file = {:home/lg/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Sharma et al. - 2018 - Linkage disequilibrium and evaluation of genome-wide association mapping models in tetraploid potato.pdf:pdf},
isbn = {0000000277525},
issn = {21601836},
journal = {G3: Genes, Genomes, Genetics},
keywords = {GWAS,GWAS Gene action,GWAS Mapping Models,GWAS Models,GWAS Poly,GWAS Population Structure,GWAS Potato,Genome-wide association studies (GWAS),Linkage disequilibrium kinship,Mixed models,Population structure,Potato,Single-nucleotide polymorphism (SNP),Tetraploid},
mendeley-tags = {GWAS,GWAS Gene action,GWAS Mapping Models,GWAS Models,GWAS Poly,GWAS Population Structure,GWAS Potato},
number = {10},
pages = {3185--3202},
title = {{Linkage disequilibrium and evaluation of genome-wide association mapping models in tetraploid potato}},
volume = {8},
