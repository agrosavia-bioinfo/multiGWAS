keywords = {GWAS,GWAS SHEsis,GWAS Software,Polyploids,Polyploids tools},
mendeley-tags = {GWAS,GWAS SHEsis,GWAS Software,Polyploids,Polyploids tools},
pages = {1--10},
publisher = {Nature Publishing Group},
title = {{SHEsisPlus, a toolset for genetic studies on polyploid species}},
